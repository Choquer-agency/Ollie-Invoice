# ===========================================
# Ollie Invoice - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# Never commit the actual .env file to git!

# ===========================================
# DATABASE (Required)
# ===========================================
# PostgreSQL connection string from Supabase
# Format: postgresql://postgres:[password]@[host]:[port]/postgres
DATABASE_URL=postgresql://postgres:YOUR_PASSWORD@db.YOUR_PROJECT.supabase.co:5432/postgres

# ===========================================
# SUPABASE (Required)
# ===========================================
# Found in Supabase Dashboard → Settings → API
SUPABASE_URL=https://YOUR_PROJECT.supabase.co
SUPABASE_SERVICE_ROLE_KEY=eyJ...your-service-role-key...

# Client-side keys (prefixed with VITE_ for frontend access)
VITE_SUPABASE_URL=https://YOUR_PROJECT.supabase.co
VITE_SUPABASE_ANON_KEY=eyJ...your-anon-key...

# ===========================================
# SUPABASE STORAGE (Optional)
# ===========================================
# Bucket name for file uploads (defaults to 'files')
SUPABASE_STORAGE_BUCKET_NAME=files

# ===========================================
# STRIPE (Required for payments)
# ===========================================
# Found in Stripe Dashboard → Developers → API keys
# Use live keys for production, test keys for development
STRIPE_SECRET_KEY=sk_live_...
STRIPE_PUBLISHABLE_KEY=pk_live_...

# Webhook secret from Stripe Dashboard → Developers → Webhooks
# Create webhook endpoint pointing to: https://yourdomain.com/api/stripe/webhook
STRIPE_WEBHOOK_SECRET=whsec_...

# ===========================================
# RESEND EMAIL (Required for sending invoices)
# ===========================================
# Get API key from https://resend.com/api-keys
RESEND_API_KEY=re_...

# Your verified sending email address
# Must be from a domain you've verified in Resend
RESEND_FROM_EMAIL=invoices@yourdomain.com

# ===========================================
# APPLICATION (Required)
# ===========================================
# Your production domain (no trailing slash)
BASE_URL=https://yourdomain.com

# Node environment (production or development)
NODE_ENV=production

# Server port (Railway sets this automatically)
PORT=3000

# ===========================================
# BRANDING (Optional)
# ===========================================
# URL to Ollie Invoice logo (appears in emails)
OLLIE_INVOICE_LOGO_URL=https://your-logo-url.com/logo.png

# Logo URL for public invoice pages
VITE_OLLIE_INVOICE_LOGO_URL=https://your-logo-url.com/logo.png
